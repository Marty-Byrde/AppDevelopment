<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtText"/>
    <CheckBox
            android:text="German"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkGerman"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtText"
            android:layout_marginTop="104dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.274"/>
    <CheckBox
            android:text="English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkEnglish"
            app:layout_constraintStart_toEndOf="@+id/checkGerman" android:layout_marginStart="68dp"
            app:layout_constraintTop_toTopOf="@+id/checkGerman" app:checkedState="checked"/>
    <TextView
            android:text="Choose your language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtChoose"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtText" android:layout_marginTop="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>