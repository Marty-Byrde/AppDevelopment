<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".unitConvertions.UnitConverterActivity">
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="138dp" android:id="@+id/guideline"/>
    <RelativeLayout
            android:layout_width="412dp"
            android:layout_height="729dp" tools:layout_editor_absoluteX="-2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:layout_width="250dp"
                android:layout_height="80dp" app:srcCompat="@drawable/inc_message_background"
                android:id="@+id/imageView"
                android:layout_marginStart="157dp"
                android:layout_marginTop="24dp" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:text="TextView"
                android:layout_width="182dp"
                android:layout_height="42dp" android:id="@+id/txtMessage"
                android:layout_marginStart="12dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="56dp" android:layout_marginBottom="8dp"
                android:layout_alignBottom="@+id/imageView" android:layout_alignTop="@+id/imageView"
                android:layout_marginTop="30dp"/>
        <TextView
                android:text="12:02am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtDate"
                android:layout_marginTop="5dp" android:inputType="date"
                android:layout_marginStart="147dp" android:layout_marginBottom="56dp"
                android:layout_alignBottom="@+id/imageView" android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp" android:layout_alignStart="@+id/imageView"
                android:layout_alignTop="@+id/imageView"/>
        <TextView
                android:text="You sent at:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtAuthor"
                android:textSize="14sp"
                android:layout_marginStart="14dp" android:layout_alignStart="@+id/imageView"
                android:layout_marginBottom="56dp" android:layout_alignBottom="@+id/imageView"
                android:layout_alignTop="@+id/imageView" android:layout_marginTop="5dp"/>
        <View
                android:id="@+id/divider2"
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginBottom="54dp" android:layout_alignBottom="@+id/imageView"
                android:layout_marginStart="30dp" android:layout_alignStart="@+id/imageView"
                android:layout_alignParentEnd="true" android:layout_marginEnd="72dp"
                android:layout_alignTop="@+id/imageView" android:layout_marginTop="25dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>