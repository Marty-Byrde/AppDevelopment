<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Value:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:layout_marginStart="32dp" android:textSize="24sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtInput"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginStart="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="@+id/textView"
            android:layout_marginEnd="20dp"/>
    <Button
            android:text="Convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnConvert"
            app:layout_constraintTop_toBottomOf="@+id/txtInput"
            android:layout_marginTop="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Result:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/btnConvert"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="20sp" android:layout_marginTop="184dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="273dp"
            android:layout_height="26dp" android:id="@+id/txtResult"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.404" android:textAlignment="center"/>
    <Spinner
            android:layout_width="335dp"
            android:layout_height="22dp" android:id="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtInput"
            app:layout_constraintBottom_toTopOf="@+id/btnConvert"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblRate1"
            app:layout_constraintTop_toBottomOf="@+id/btnConvert" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="76dp" android:layout_marginStart="92dp" android:textSize="16sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblRate2"
            app:layout_constraintStart_toEndOf="@+id/lblRate1" app:layout_constraintTop_toTopOf="@+id/lblRate1"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="16sp"/>
    <TextView
            android:text="Rates:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/btnConvert" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtRate1"
            app:layout_constraintTop_toTopOf="@+id/txtRate2" app:layout_constraintEnd_toEndOf="@+id/lblRate1"
            app:layout_constraintStart_toStartOf="@+id/lblRate1" android:textSize="16sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtRate2"
            app:layout_constraintTop_toBottomOf="@+id/lblRate2"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="@+id/lblRate2"
            app:layout_constraintStart_toStartOf="@+id/lblRate2" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>