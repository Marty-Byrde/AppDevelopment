<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Services.ServiceInterface">

    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStartService"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="92dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="320dp"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStopService"
            app:layout_constraintStart_toEndOf="@+id/btnStartService" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21" app:layout_constraintTop_toTopOf="@+id/btnStartService"/>
</androidx.constraintlayout.widget.ConstraintLayout>